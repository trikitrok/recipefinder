<h1>Recipes for <%= @search_keyword %>:</h1>

<table>
  <thead>
    <td>Thumbnail</td> 
    <td>Title</td> 
    <td>Social Rank</td> 
  </thead>

  <% extract_recipes_data(@recipes).each do |recipe| %>
    <tr>
      <td>
        <a href='<%= recipe[:url] %>'>
          <%= image_tag(recipe[:thumbnail], width: 100, height: 100) %>
        </a>
      </td>
      <td>
        <a href='<%= recipe[:url] %>'>
          <%= sanitize(recipe[:title]) %>
        </a>
      </td>
      <td><%= recipe[:social_rank] %></td>
    </tr>
  <%end%>
</table>
